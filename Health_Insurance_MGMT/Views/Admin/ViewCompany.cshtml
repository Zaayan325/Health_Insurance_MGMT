@{
    ViewData["Title"] = "ViewEmp";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@using App.Models.Models
@model IEnumerable<CompanyDetails>

<div class="row">
    <div class="col-md-6">
        <h1 class="text-success">Companies List</h1>
    </div>
    <div class="col-md-6">
        <a asp-action="AddCompany" asp-controller="Admin" class="btn btn-info">Add Company</a>
    </div>
</div>
<table class="table table-bordered" style="width:100%">

    <thead>
        <tr>
            <th>Company Id</th>
            <th>Company Name</th>
            <th>Company URL</th>
            <th>Company Address</th>
            <th>Company Phone</th>
            <th>Added At</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model)
        {
            <tr>
                <td>
                    @i.CompanyId
                </td>
                <td>
                    @i.CompanyName
                </td>
                <td>
                    @i.CompanyURL
                </td>
                <td>
                    @i.Address
                </td>
                <td>
                    @i.Phone
                </td>
                <td>
                    @i.CompanyDetailsAdded
                </td>
                
                <td>
                    <a asp-action="EditCompany" asp-controller="Admin" asp-route-id="@i.CompanyId" class="btn btn-outline-success">Update</a>
                    <a asp-action="Delete" asp-controller="Admin" asp-route-id="" class="btn btn-outline-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>


