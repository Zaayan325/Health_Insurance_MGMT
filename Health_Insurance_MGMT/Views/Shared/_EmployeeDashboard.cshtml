@{
    var isLoggedIn = Context.Session.GetInt32("User_Id") != null;
}
<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="author" content="Untree.co">
    <link rel="shortcut icon" href="favicon.png">

    <meta name="description" content="" />
    <meta name="keywords" content="" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&family=PT+Mono&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/userdashboard/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/userdashboard/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/userdashboard/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/userdashboard/css/jquery.fancybox.min.css">
    <link rel="stylesheet" href="~/userdashboard/fonts/icomoon/style.css">
    <link rel="stylesheet" href="~/userdashboard/fonts/flaticon/font/flaticon.css">
    <link rel="stylesheet" href="~/userdashboard/css/aos.css">
    <link rel="stylesheet" href="~/userdashboard/css/style.css">

    <title>@ViewData["Title"]</title>
</head>

<body data-spy="scroll" data-target=".site-navbar-target" data-offset="100">

    <div class="lines-wrap">
        <div class="lines-inner">
            <div class="lines"></div>
        </div>
    </div>
    <!-- END lines -->

    <div class="site-mobile-menu site-navbar-target">
        <div class="site-mobile-menu-header">
            <div class="site-mobile-menu-close">
                <span class="icofont-close js-menu-toggle"></span>
            </div>
        </div>
        <div class="site-mobile-menu-body"></div>
    </div>

    <nav class="site-nav dark mb-5 site-navbar-target">
        <div class="container">
            <div class="site-navigation">
                <a asp-action="Index" asp-controller="Home" class="logo m-0">Health Insurance System<span class="text-primary">.</span></a>

                <ul class="js-clone-nav d-none d-lg-inline-none site-menu float-right site-nav-wrap">
                    <li><a asp-action="Index" asp-controller="Home" class="nav-link ">Home</a></li>
                    <li><a asp-action="Contact" asp-controller="Home" class="nav-link">Contact</a></li>
                    <li class="has-children">
                        <a  class="nav-link">Policy Section</a>
                        <ul class="dropdown">
                           
                            <li >
                                <a asp-action="CreateRequestByUser" asp-controller="PoliciesRequest">Request Policy</a>

                                
                            </li>
                            <li><a asp-action="MyPolicyRequests" asp-controller="PoliciesRequest" asp-route-id="@Context.Session.GetInt32("User_Id")" class="nav-link">Check Policy Status</a></li>
                            <li><a asp-action="CheckPoliciesByUser" asp-controller="Policies" class="nav-link">Check Policies </a></li>
                        </ul>
                    </li>
                    <li><a href="#services-section" class="nav-link"></a></li>

                    <li><a asp-action="EmployeeEditbyUser" asp-controller="Employee" asp-route-id="@Context.Session.GetInt32("User_Id")" class="nav-link">Edit Information</a></li>
                    <li><a asp-action="CreateHospitalReport" asp-controller="HospitalReports" asp-route-id="@Context.Session.GetInt32("User_Id")" class="nav-link">Create Hospital Report</a></li>
                </ul>

                <a href="#" class="burger ml-auto float-right site-menu-toggle js-menu-toggle d-inline-block d-lg-inline-block" data-toggle="collapse" data-target="#main-navbar">
                    <span></span>
                </a>


            </div>
        </div>
    </nav>




	
			@RenderBody()



    <div id="overlayer"></div>
    <div class="loader">
        <div class="spinner-border" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>
    <script>
        document.querySelector("#validatedCustomFile").addEventListener('change', function (event) {
            // When a file is selected, get the file name
            var fileName = event.target.files[0].name;

            // Find the label that corresponds to the input and set its content
            var label = event.target.nextElementSibling;
            label.innerText = fileName;
        });
    </script>

    <script src="~/userdashboard/js/jquery-3.4.1.min.js"></script>
    <script src="~/userdashboard/js/popper.min.js"></script>
    <script src="~/userdashboard/js/bootstrap.min.js"></script>
    <script src="~/userdashboard/js/owl.carousel.min.js"></script>
    <script src="~/userdashboard/js/jquery.animateNumber.min.js"></script>
    <script src="~/userdashboard/js/jquery.waypoints.min.js"></script>
    <script src="~/userdashboard/js/jquery.fancybox.min.js"></script>
    <script src="~/userdashboard/js/aos.js"></script>
    <script src="~/userdashboard/js/wave-animate.js"></script>
    <script src="~/userdashboard/js/circle-progress.js"></script>
    <script src="~/userdashboard/js/imagesloaded.pkgd.js"></script>
    <script src="~/userdashboard/js/isotope.pkgd.min.js"></script>
    <script src="~/userdashboard/js/jquery.easing.1.3.js"></script>
    <script src="~/userdashboard/js/TweenMax.min.js"></script>
    <script src="~/userdashboard/js/ScrollMagic.min.js"></script>
    <script src="~/userdashboard/js/scrollmagic.animation.gsap.min.js"></script>


    <script src="~/userdashboard/js/custom.js"></script>

</body>

</html>
