@{
    ViewData["Title"] = "ViewEmp";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model IEnumerable<Policies>

<div class="row">
    <div class="col-md-6">
        <h1 class="text-success">Policies List</h1>
    </div>
    <div class="col-md-6">
        <a asp-action="CreatePolicy" asp-controller="Policies" class="btn  btn-info">Add Policies</a>
    </div>
</div>

<div class="card-body table-border-style">
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>P_Id</th>
                    <th>PolicyName</th>
                    <th>Company's Policy</th>
                    <th>Total Amount</th>
                    <th>
                        EMI
                        <small class="text text-muted">Equated Monthly Installment</small>
                    </th>
                    <th>Document</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.PolicyId</td>
                        <td>@item.PolicyName</td>
                        <td>@item.Ins_Id</td>
                        <td>@item.PolicyFullAmount</td>
                        <td>@item.equatedmonthlyinstalment</td>
                        <td>
                            <a class="btn  btn-success" asp-action="DownloadPolicyTerms" asp-route-policyId="@item.PolicyId">Download Terms</a>
                        </td>
                        <td>
                            <a asp-action="EditPolicy" asp-controller="Policies" asp-route-id="@item.PolicyId" class="btn btn-group-sm btn-outline-success">Edit</a>
                            <a asp-action="DeletePolicy" asp-controller="Policies" asp-route-id="@item.PolicyId" class="btn btn-group-sm btn-outline-danger">Delete</a>
                            <a asp-action="DetailPolicy" asp-controller="Policies" asp-route-id="@item.PolicyId" class="btn btn-group-sm btn-outline-success">Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
